<Window
    x:Class="Amedig_Panama_WPF.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Amedig_Panama_WPF.Views"
    Title="Login"
    Icon="/amedig.ico"
    WindowState="Maximized"
    Closed="Window_Closed"
    Background="#006203"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    
    <Grid Margin="232,0,224,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="106*" />
            <RowDefinition Height="431*"/>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Rectangle
           Margin="-160,72,460,43"
            Fill="White"
            RadiusX="0"
            RadiusY="10" Grid.RowSpan="3">
            <Rectangle.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Direction="0"
                    RenderingBias="Quality"
                    ShadowDepth="1"
                    Color="#FFBBBBBB" 
                    />
            </Rectangle.Effect>
        </Rectangle>

        <Button
            x:Name="LogInButton"
            Width="250"
            Height="70"
            Margin="10,230,0,161"
            HorizontalAlignment="Left"          
            Click="LogInButton_Click"           
            FontWeight="Bold"
            FontSize="40"
            RenderTransformOrigin="0.152,2.035" Grid.Row="1">
            <Button.Background>
                <ImageBrush ImageSource="{DynamicResource LoginButton}" />
            </Button.Background>
        </Button>

        <Button
       Width="250"
        Height="70"
        
        Margin="10,350,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Click="ButtonSettings"
        FontWeight="Bold"
        FontSize="35"
        Foreground="White" RenderTransformOrigin="2.738,-0.225" Grid.Row="1">
            <Button.Background>
                <ImageBrush ImageSource="{DynamicResource SettingsButton}" />
            </Button.Background>

        </Button>

        <PasswordBox
            x:Name="PasswordTextBox"
            Margin="-50,50,600,291"
            materialDesign:HintAssist.Hint="{DynamicResource Password}"
            FontFamily="Champagne &amp; Limousines"
            FontSize="30" Height="70"
            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Grid.Row="1" PreviewMouseUp="textBox1_PreviewMouseUp" />

        <Label Content="{DynamicResource SelectUser}" Margin="-50,85,0,0" Foreground="Gray" FontSize="22" />

        <ComboBox x:Name="UserNameTextBox" Margin="-50,20,600,291" Grid.Row="1" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="360" Height="50" Background="#D8D8D1" FontSize="18" FontWeight="Bold">
            <ComboBoxItem Content="{DynamicResource UserSelect}" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="{DynamicResource Manager}"></ComboBoxItem>
            <ComboBoxItem Content="{DynamicResource OpPaca}"></ComboBoxItem>
        </ComboBox>

        <Image Source="\Images\Amedig Cover .png" Margin="-230,72,-845,41" Grid.RowSpan="2" Width="572" Height="500">
            <Image.Effect>
                <DropShadowEffect Direction="225" Color="#FFB6C2CB" ShadowDepth="3" BlurRadius="14" />
            </Image.Effect>
        </Image>
    </Grid>
</Window>
