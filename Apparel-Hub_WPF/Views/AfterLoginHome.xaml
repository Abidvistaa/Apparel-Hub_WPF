<Window 
    x:Class="Amedig_Panama_WPF.Views.AfterLoginHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Home" 
    Icon="/amedig.ico"
    WindowState="Maximized"
    Closed="Window_Closed">
    

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#7FB77E" Offset="0.0" />
                <GradientStop Color="#C689C6" Offset="0.5" />
                <GradientStop Color="#7FBCD2" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="80" Click="Back_Button_Click" BorderBrush="Black">
            <Button.Background>
                <ImageBrush ImageSource="{DynamicResource BackButton}" />
            </Button.Background>
        </Button>
        
        <materialDesign:Card Margin="100 50 50 0">
            <StackPanel Margin="16">
                <TextBlock Text="Login Success" FontSize="20" Margin="0 0 0 10" Foreground="Green"/>
                <Button Content="Welcome Home" Style="{StaticResource MaterialDesignRaisedButton}" />
                <Label Margin="520 20 0 0" x:Name="whoLoggedIn" Content="Emty" FontSize="20" FontWeight="Bold" Foreground="Crimson"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>